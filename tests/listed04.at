AT_SETUP([--listed-incremental and --one-file-system])
AT_KEYWORDS([listed incremental listed04])

AT_TAR_CHECK([

mkdir dir
echo a >dir/a
echo b >dir/b

tar --one-file-system -cvf archive.tar -g archive.incr dir || exit
tar -tf archive.tar || exit
],
[0],
[dir/
dir/a
dir/b
dir/
dir/a
dir/b
],
[tar: dir: Directory is new
],[],[],[gnu])

