AT_SETUP([skip-old-files])
AT_KEYWORDS([extract extrac19 old-files skip-old-files])

AT_TAR_CHECK([
mkdir dir
cd dir
echo 'Old file a' > a
echo 'Old file b' > b

tar cf ../archive .

rm b
echo 'File a' > a

tar -x --skip-old-files -f ../archive
echo status=$?

cat a
],
[0],
[status=0
File a
])

AT_CLEANUP

