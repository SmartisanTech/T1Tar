# Check extraction of empty directory with -C.

AT_SETUP([extract empty directory with -C])
AT_KEYWORDS([extract extrac16])

AT_TAR_CHECK([
mkdir src src/a src/a/b dest
touch src/a/c

tar -cf archive.tar -C src a &&
tar -xf archive.tar -C dest
],
[0],[],[],[],[],[gnu])

AT_CLEANUP
