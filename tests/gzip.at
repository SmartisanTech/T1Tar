# tar should detect that its gzip child failed.

AT_SETUP([gzip])
AT_KEYWORDS([gzip])

unset TAR_OPTIONS

AT_CHECK([
AT_GZIP_PREREQ
tar xfvz /dev/null 2>err
RC=$?
sed -n '/^tar:/p' err >&2
exit $RC
],
[2],
[],
[tar: Child returned status 1
tar: Error is not recoverable: exiting now
],
[],[])

AT_CLEANUP
