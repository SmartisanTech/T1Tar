# Check that tar --verify works.
# Problem reported by Gilles Espinasse in
# <http://lists.gnu.org/archive/html/bug-tar/2010-11/msg00065.html>.

AT_SETUP([verify])
AT_KEYWORDS([verify])

AT_TAR_CHECK([
touch foo
tar -cvf archive.tar --verify foo
],
[0],
[foo
Verify foo
])

AT_CLEANUP
