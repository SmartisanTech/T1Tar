# Paths going up and down were inducing extraction loops.

AT_SETUP([extraction loops])
AT_KEYWORDS([extract extract03])

AT_TAR_CHECK([
mkdir directory
tar -cPvf archive directory/../directory
echo separator
tar -xPvf archive --warning=no-timestamp],
[0],
[directory/../directory/
separator
directory/../directory/
])

AT_CLEANUP
