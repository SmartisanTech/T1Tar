# An old archive was not receiving directories.

AT_SETUP([old archives])
AT_KEYWORDS([old])

unset TAR_OPTIONS
AT_CHECK([
mkdir directory
tar cfvo archive directory || exit 1
tar tf archive
],
[0],
[directory/
directory/
])

AT_CLEANUP
