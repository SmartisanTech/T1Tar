AT_SETUP([incremental dumps with -C])
AT_KEYWORDS([incremental incr05])

AT_TAR_CHECK([
mkdir dir
mkdir dir/sub
genfile --file dir/file1
genfile --file dir/sub/file2

echo Level 0
tar -c -f archive.tar -g db -C dir -v --warning=no-new-dir .

genfile --file dir/file3
echo Level 1
tar -c -f archive.tar -g db -C dir -v --warning=no-new-dir .
],
[0],
[Level 0
./
./sub/
./file1
./sub/file2
Level 1
./
./sub/
./file3
],[],[],[],[gnu, oldgnu, posix])

AT_CLEANUP
